<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.codebutler.farebot"
    android:versionCode="22"
    android:versionName="2.5.22" >

    <uses-permission android:name="android.permission.NFC" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-feature android:name="android.hardware.nfc" />

    <!-- Google Maps V2 -->
    <permission
        android:name="${applicationId}.permission.MAPS_RECEIVE"
        android:protectionLevel="signature"/>
    <uses-permission android:name="${applicationId}.permission.MAPS_RECEIVE"/>
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES"/>

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/launcher_icon"
        android:label="@string/app_name"
        android:name="com.codebutler.farebot.FareBotApplication">
        <activity
            android:name=".activity.MainActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="sensorPortrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.EDIT" />
                <action android:name="android.intent.action.PICK" />

                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="vnd.android.cursor.dir/${applicationId}.card" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ReadingTagActivity"
            android:configChanges="keyboardHidden|orientation"
            android:launchMode="singleTop"
            android:noHistory="true"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".activity.BackgroundTagActivity"
            android:configChanges="keyboardHidden|orientation"
            android:enabled="false"
            android:launchMode="singleTop"
            android:noHistory="true" >
            <intent-filter>
                <action android:name="android.nfc.action.TAG_DISCOVERED" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.nfc.action.TECH_DISCOVERED" />
            </intent-filter>
            <meta-data
                android:name="android.nfc.action.TECH_DISCOVERED"
                android:resource="@xml/filter_nfc" />
        </activity>
        <activity
            android:name=".activity.CardInfoActivity"
            android:configChanges="keyboardHidden|orientation" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.EDIT" />

                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="vnd.android.cursor.item/${applicationId}.card" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.AdvancedCardInfoActivity"
            android:configChanges="keyboardHidden|orientation" />
        <activity
            android:name=".activity.FareBotPreferenceActivity"
            android:label="@string/preferences" />
        <activity
            android:name=".activity.TripMapActivity"
            android:configChanges="keyboardHidden|orientation" />
        <activity
            android:name=".activity.SupportedCardsActivity"
            android:label="@string/supported_cards"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".activity.CardsActivity"
            android:label="@string/scanned_cards"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".activity.KeysActivity"
            android:label="@string/keys" />
        <activity
            android:name=".activity.AddKeyActivity"
            android:label="@string/add_key"
            android:theme="@style/FareBotDialog" >
            <intent-filter android:priority="1">
                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />
                <action android:name="android.intent.action.VIEW" />
                <data
                    android:mimeType="application/octet-stream"
                    android:pathPattern=".*\\.farebotkeys"
                    android:scheme="file" />
                <data
                    android:mimeType="application/octet-stream"
                    android:pathPattern=".*\\.farebotkeys"
                    android:scheme="content" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.LicenseActivity"
            android:label="@string/title_activity_license" />
        <activity
            android:name=".activity.AboutActivity"
            android:label="@string/title_activity_about"
            android:screenOrientation="sensorPortrait" />

        <provider
            android:name="com.codebutler.farebot.provider.CardProvider"
            android:authorities="${applicationId}.cardprovider"
            android:exported="false"/>

        <provider
            android:name="com.codebutler.farebot.provider.CardKeyProvider"
            android:authorities="${applicationId}.keyprovider"
            android:exported="false"/>

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyBUUm1_1cyaCLkIvcE60gF4xO3pyb6SyP4" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="77d8c3509e581fb753f705c476fe3b022dda0287" />
    </application>

</manifest>
