    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/grid_unit_2x">

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/grid_unit_2x"
        android:layout_gravity="center"
        android:src="@drawable/ic_transaction_tvm_32dp"
        android:contentDescription="@string/refill"/>

    <TextView
        android:id="@+id/agency"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_primary"
        android:textColor="#424242"
        tools:text="BART"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/grid_unit_2x"
        android:gravity="end
"
        android:orientation="vertical">

        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#00ACC1"
            android:fontFamily="sans-serif-medium"
            tools:text="Â¥300"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="8:00 AM"/>
    </LinearLayout>
</LinearLayout>
